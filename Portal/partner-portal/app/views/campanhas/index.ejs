<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Campanhas criadas</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<!-- <link rel="shortcut icon" href="images/favicon.ico" /> -->
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
                    <!-- <img src="images/logo.png" /> -->
                    <div class="col-md-12">
							<div class="col-md-8">
								<h3 class="title">Portal do Parceiro </h3>
							</div>
							<div class="col-md-3">
								<img src="http://172.13.0.77:3000/images/kinoplex.jpeg" width="100" />
							</div>
						</div>
				</div>

				<div id="navbar" class="navbar-collapse collapse">						
					<ul class="nav navbar-nav navbar-right">						
                        <li id="criarCampanha"><a href="/criarCampanha">Criar Campanha</a></li>
						<li><a href="/campanhas">Sair</a></li>
					</ul>					
				</div>				
			</div>
		</nav>


	    <div class="container">

	    	<% if (campanhas != null && campanhas.length > 0) { %>
	    		<% for(var i = 0; i < campanhas.length; i++) {%>
			    	<div class="row noticia_wrapper">
			    		<div class="col-md-12" class="noticia_wrapper">
			    			<div>
								<div class="col-md-8">
				    			<!-- <span class="noticia_autor"><%=campanhas[i].titulo%></span> -->
				    			<a href="campanha?id_campanha=<%= campanhas[i].id %>" class="noticia_titulo"><%=campanhas[i].titulo%></a>
								<span class="noticia_data"><%=campanhas[i].descricao%></span>

								<h5>Valor original: <span class="value-old"> R$<%=campanhas[i].valor_original%> </span> </h5>
								<h5>Valor com desconto: <span class="value-new">  R$<%=campanhas[i].valor_final%> </span> </h5>
								</div>
								<div class="col-md-3">
															
								<% var dataInicial = new Date(campanhas[i].data_inicio)
								   var dataFinal = new Date(campanhas[i].data_fim)								
								%>

								<h5>Data/Hora de início: <span class="value"> <%=campanhas[i].data_inicio%> as  <%=campanhas[i].hora_inicio%> </span></h5>
								<h5>Data/Hora de término: <span class="value"> <%=campanhas[i].data_fim%> as  <%=campanhas[i].hora_fim%> </span></h5>
				    			<br />
				    			<p class="noticia_resumo">
				    				Número de pessoas: <span class="value"> <%=campanhas[i].pessoas%> </span>
								</p>							
									<img src="<%=campanhas[i].fotopath%>" width=100 />								
							</div>
				    		</div>
				    	</div>
					</div>
				<% } %>
			<% } %>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>