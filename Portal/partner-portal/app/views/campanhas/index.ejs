						<span class="icon-bar"></span>
					</button>
					
                    <!-- <img src="images/logo.png" /> -->
                    <h3>Portal do Parceiro </h3>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
                        <li><a href="/criarCampanha">Criar Campanha</a></li>
						<li><a href="/campanhas">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">

	    	<% if(campanhas.length > 0) { %>
	    		<% for(var i = 0; i < campanhas.length; i++) {%>
			    	<div class="row">
			    		<div class="col-md-12">
			    			<div class="noticia_wrapper">
				    			<span class="noticia_autor"><%=campanhas[i].titulo%></span>
				    			<a href="campanha?id_campanha=<%= campanhas[i].id %>" class="noticia_titulo"><%=campanhas[i].titulo%></a>
				    			<span class="noticia_data"><%=campanhas[i].descricao%></span>
				    			<br />
				    			<p class="noticia_resumo">
				    				NÃºmero de pessoas: <%=campanhas[i].pessoas%>
								</p>							
									<img src="http://localhost:3000/images/<%=campanhas[i].fotopath%>" width=100 />								
				    		</div>
				    	</div>
					</div>
				<% } %>
			<% } %>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
